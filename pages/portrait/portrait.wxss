.tabBar {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 48px;
	background: #F7FAFB;
	border-top: 1px solid #dfe5e7;
	z-index: 9999;
}
.tabBar .section {
	display: flex;
	flex-direction: row;
	align-items: center;
	height: 48px;
	width: 250%;
}
.tabBar .section > view {
	display: flex;
	flex-direction: row;
	align-items: center;
	height: 48px;
	padding: 0 14px;
	color: #486075;
}
.tabBar .section > view.view-hover {
	opacity: 0.6;
}
.tabBar .section > view.active {
	color: #e34920;
}
.tabBar .section > view.active.view-hover {
	opacity: 1;
}
.tabBar .section .iconfont {
	display: inline-block;
	font-size: 16px;
	margin-right: 2px;
}

.container > .section {
	width: 100%;
	height: 100%;
	padding-bottom: 48px;
	overflow: hidden;
	box-sizing: border-box;
}
.section .content {
	padding: 10px;
}
.section .content > view {
	margin-top: 16px;
}
.section .content view:first-child {
	margin-top: 0;
}
.infoView {
	display: flex;
	flex-direction: row;
	padding: 8px 10px;
	background-color: #f0f3f6;
	border: 1px solid #d3d9df;
	border-radius: 5px;
	color: #486075;
	font-size: 100%;
}
.infoView .iconfont {
	color: #e34920;
	font-size: 16px;
	margin-right: 4px;
}
.section .content view.title {
	color: #6d7e8d;
}
.section .content view.con {
	margin-top: 10px;
}

/* content-info */
.content-info .infoView > view {
	width: 49%;
}
.content-info .hxList .con {
	display: flex;
	flex-direction: row;
}
.content-info .hxList .left, .content-info .hxList .right {
	position: relative;
	width: 50%;
}
.content-info .hxList .right {
	margin-top: 40px;
}
.content-info .hxList view.left:before {
	content: '';
	display: block;
	height: 82%;
	width: 1px;
	border-right: 1px solid #ddd;
	position: absolute;
	right: 0;
	top: 24px;
}
.content-info .hxList .left view, .content-info .hxList .right view {
	position: relative;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 10px;
	text-align: right;
	margin-bottom: 30px;
}
.content-info .hxList .right view {
	text-align: left;
}
.content-info .hxList .left view:before {
	content: '';
	display: block;
	width: 10px;
	height: 1px;
	border-top: 1px solid #ddd;
	position: absolute;
	right: 0;
	top: 50%;
}
.content-info .hxList .right view:before {
	content: '';
	display: block;
	width: 10px;
	height: 1px;
	border-top: 1px solid #ddd;
	position: absolute;
	left: 0;
	top: 50%;
}
.content-info .hxList view text {
	flex: 1;
	line-height: 1.12;
}
.content-info .hxList .iconfont {
	display: inline-block;
	width: 44px;
	height: 44px;
	text-align: center;
	line-height: 44px;
	vertical-align: middle;
	font-size: 22px;
	color: #5b6c93;
	border: 2px solid #5b6c93;
	border-radius: 50%;
	background-color: #e8ecf5;
}
.content-info .hxList .left text {
	margin-right: 5px;
}
.content-info .hxList .right text {
	margin-left: 5px;
}
